<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">






    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:paddingRight="10dp" >


        <ImageView
            android:id="@+id/imageView"
            android:layout_marginBottom="10sp"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/titleSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="26sp"
            android:textColor="#fff"
            android:fontFamily="georgia"
            android:paddingBottom="20sp"
            android:text="Friday//Camp" />

        <TextView
            android:id="@+id/subtitleSignUp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="17sp"
            android:fontFamily="georgia"
            android:text="Sign Up Below"
            android:layout_marginBottom="30dp"
            />


        <EditText
            android:id="@+id/register_username_txt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:background="@drawable/round_corners_2"
            android:hint="username"
            android:fontFamily="georgia"
            android:layout_marginBottom="20dp"
            android:textSize="12dp"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            />



        <EditText
            android:id="@+id/register_email_txt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:background="@drawable/round_corners_2"
            android:hint="email"
            android:fontFamily="georgia"
            android:layout_marginBottom="20dp"
            android:textSize="12dp"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            />



        <EditText
            android:id="@+id/register_password_txt1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:background="@drawable/round_corners_2"
            android:textSize="12dp"
            android:hint="password"
            android:paddingLeft="10dp"
            android:fontFamily="georgia"
            android:layout_marginBottom="20dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            />

        <EditText
            android:id="@+id/register_password_txt2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:background="@drawable/round_corners_2"
            android:textSize="12dp"
            android:hint="password"
            android:paddingLeft="10dp"
            android:fontFamily="georgia"
            android:layout_marginBottom="20dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            />

        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="Sign Up"
            android:onClick="trySignUp"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:background="@drawable/round_corners"
            android:fontFamily="georgia"
            />





        <pl.droidsonroids.gif.GifTextView
            android:id="@+id/loadingSignUp"
            android:layout_width="40sp"
            android:visibility="invisible"
            android:layout_height="40sp"
            android:background="@drawable/infinity"
            />


    </LinearLayout>









</LinearLayout>