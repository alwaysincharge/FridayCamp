<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.dell.fridaycamp.SinglePost">




    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">



    <LinearLayout
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center_horizontal"

        android:orientation="vertical">


        <ImageView
            android:id="@+id/singlepostImage"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:background="@drawable/round_corners_2"
            app:srcCompat="@drawable/back" />

    </LinearLayout>





    <LinearLayout
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="#fff"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">







        <TextView
            android:id="@+id/singlepostOwner"
            android:layout_width="match_parent"
            android:layout_gravity="left"
            android:fontFamily="georgia"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="0sp"
            android:text="atsunewjoint" />







        <TextView
            android:id="@+id/singlepostTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:textColor="#000"
            android:textSize="17dp"
            android:fontFamily="georgia"
            android:text="How do I incorporate Object oriented programming." />


        <TextView
            android:id="@+id/singlepostBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="georgia"
            android:text="On the other hand, self-promotion. Governor Bustamante governor, since at the time he was refusing to run, thinking he’d draw support away from the actual governor.) When FOX sued Al Franken for using the phrase “Fair and Balanced”, Flemming wrote a play with the name." />


    </LinearLayout>


    </LinearLayout>



</android.support.constraint.ConstraintLayout>
