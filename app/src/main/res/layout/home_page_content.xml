<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">





    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:padding="10dp"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:paddingRight="10dp" >


        <ImageView
            android:id="@+id/imageView"
            android:layout_marginBottom="20sp"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#fff"

            android:paddingBottom="20sp"
            android:text="Friday//Camp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="17sp"

            android:text="Connect with Kenya's programmers."
            android:layout_marginBottom="30dp"
            />


        <EditText
            android:id="@+id/username_txt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:background="@drawable/round_corners_2"
            android:hint="username"

            android:layout_marginBottom="20dp"
            android:textSize="12dp"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            />

        <EditText
            android:id="@+id/password_txt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:background="@drawable/round_corners_2"
            android:textSize="12dp"
            android:hint="password"
            android:paddingLeft="10dp"

            android:layout_marginBottom="20dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="Sign In"
            android:onClick="tryLogin"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:background="@drawable/round_corners"

            />




        <TextView
            android:id="@+id/textView3"
            android:onClick="goToSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not a member? Ruuegister here."
            android:textColor="#fff"

            android:gravity="center"
            android:textSize="12dp"
            android:layout_marginTop="20dp"
            />

        <pl.droidsonroids.gif.GifTextView
            android:id="@+id/loading"
            android:layout_width="40sp"
            android:visibility="invisible"
            android:layout_height="40sp"
            android:background="@drawable/infinity"
            />


    </LinearLayout>






</LinearLayout>